{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@lib/*": ["./src/lib/*"],
      "@models/*": ["./src/models/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
